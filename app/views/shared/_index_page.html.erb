<div class="w-full px-4 sm:px-6 lg:px-8 py-8">
  <div class="rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <% if defined?(title) && title.present? %>
        <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
      <% else %>
        <h1 class="text-2xl font-bold text-gray-900"><%= klass.name.titleize %></h1>
      <% end %>
      
      <% if defined?(actions) && actions.present? %>
        <div class="flex gap-2">
          <% actions.each do |action, value| %>
          <% next if action == :show %>
            <%= link_to value[:title], value[:path], class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% columns.each do |attr, label| %>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= label %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% data.each do |resource| %>
            <tr class="hover:bg-gray-50 transition-colors duration-200 border-b border-gray-200">
              <% columns.each do |attribute, label| %>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% if resource.respond_to?(attribute) %>
                    <% if defined?(actions) && actions[:show].present? %>
                      <%= link_to resource.send(attribute), show_link(actions[:show][:path], resource.id) %>
                    <% else %>
                      <%= resource.send(attribute) %>
                    <% end %>
                  <% else %>
                    <% if defined?(actions) && actions[:show].present? %>
                      <%= link_to attribute, show_link(actions[:show][:path], resource.id) %>
                    <% else %>
                      <%= attribute %>
                    <% end %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <%= render partial: 'shared/paginate', locals: {data: data} %>

  </div>
</div>