<div data-controller="sidebar">
  <nav class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
    <div class="px-2 sm:px-4 w-full">
      <div class="flex items-center h-16">
        <!-- Sidebar Toggle Button -->
        <button 
          data-action="click->sidebar#open"
          data-sidebar-target="toggle"
          class="sidebar-toggle-btn p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" 
          id="sidebarToggle" 
          aria-label="Open sidebar"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Logo -->
        <a href="<%= current_user ? "/users/#{current_user.id}/dashboard" : "/" %>" class="flex-shrink-0 flex items-center ml-2 hidden sm:flex">
          <span class="text-xl font-bold text-blue-600">EventScheduler</span>
        </a>

      <!-- Search Form -->
      <form class="flex-1 max-w-lg mx-4 ml-auto" action="/search" method="get">
        <div class="relative">
          <input 
            type="text" 
            name="q" 
            placeholder="Search..." 
            aria-label="Search"
            class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
          >
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </form>

        <!-- Additional navbar items can be added here -->
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>
</div>
