<div class="w-full px-4 sm:px-6 lg:px-8 py-8">
  <div class="w-full">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            <%= resource.class.name.titleize %> Details
          </h1>
          <p class="mt-2 text-sm text-gray-600">
            View and manage <%= resource.class.name.downcase %> information
          </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex space-x-3">
          <% actions.each do |action_name, action_config| %>
            <% if action_name != :back %>
              <%= link_to action_config[:path], 
                  method: action_config[:request_type] == "POST" ? :post : :get,
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <%= action_config[:title] %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <!-- Resource Details -->
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= resource.class.name.titleize %> Information
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          Complete details about this <%= resource.class.name.downcase %>
        </p>
      </div>
      
      <div class="border-t border-gray-200">
        <dl>
          <% columns.each do |column_name, column_label| %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                <%= column_label %>
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <% column_name_str = column_name.to_s %>
                <% if column_name_str.include?('date') || column_name_str.include?('created_at') || column_name_str.include?('updated_at') %>
                  <%= resource.send(column_name)&.strftime("%B %d, %Y at %I:%M %p") %>
                <% elsif column_name_str.include?('price') || column_name_str.include?('amount') %>
                  <%= inr_currency(resource.send(column_name)) %>
                <% elsif column_name_str.include?('count') || column_name_str.include?('quantity') %>
                  <%= number_with_delimiter(resource.send(column_name)) %>
                <% elsif column_name_str.include?('status') %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case resource.send(column_name)
                        when 'confirmed', 'active', 'success'
                          'bg-green-100 text-green-800'
                        when 'pending', 'warning'
                          'bg-yellow-100 text-yellow-800'
                        when 'failed', 'cancelled', 'error'
                          'bg-red-100 text-red-800'
                        else
                          'bg-gray-100 text-gray-800'
                        end %>">
                    <%= resource.send(column_name)&.titleize %>
                  </span>
                <% else %>
                  <%= resource.send(column_name) %>
                <% end %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <!-- Related Data Section -->
    <% relationships.each do |relationship_name, relationship_config| %>
      <% if resource.respond_to?(relationship_name) && resource.send(relationship_name).any? %>
      <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            <%= relationship_config[:title] %>
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            <%= relationship_config[:description] %>
          </p>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <% relationship_config[:columns].each do |column_name, column_label| %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= column_label %>
                  </th>
                <% end %>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% resource.send(relationship_name).each do |relation| %>
                <tr class="hover:bg-gray-50">
                  <% relationship_config[:columns].each do |column_name, column_label| %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <% column_name_str = column_name.to_s %>
                      <% if column_name_str.include?('date') || column_name_str.include?('created_at') || column_name_str.include?('updated_at') %>
                        <%= relation.send(column_name)&.strftime("%B %d, %Y at %I:%M %p") %>
                      <% elsif column_name_str.include?('price') || column_name_str.include?('amount') %>
                        <%= inr_currency(relation.send(column_name)) %>
                      <% elsif column_name_str.include?('count') || column_name_str.include?('quantity') %>
                        <%= number_with_delimiter(relation.send(column_name)) %>
                      <% elsif column_name_str.include?('status') %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                          <%= case relation.send(column_name)
                              when 'confirmed', 'active', 'success'
                                'bg-green-100 text-green-800'
                              when 'pending', 'warning'
                                'bg-yellow-100 text-yellow-800'
                              when 'failed', 'cancelled', 'error'
                                'bg-red-100 text-red-800'
                              else
                                'bg-gray-100 text-gray-800'
                              end %>">
                        <%= relation.send(column_name)&.titleize %>
                      </span>
                      <% else %>
                        <%= relation.send(column_name) %>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% end %>
    <% end %>

    <!-- Back Button -->
    <div class="mt-8 flex justify-start">
      <% if actions[:back] %>
        <%= link_to actions[:back][:path], 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="-ml-1 mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          <%= actions[:back][:title] %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
