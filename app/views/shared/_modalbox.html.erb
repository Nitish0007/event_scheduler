<div id="modal-<%= modal_id || 'default' %>" 
     class="fixed inset-0 z-50 overflow-y-auto hidden" 
     aria-labelledby="modal-title" 
     role="dialog" 
     aria-modal="true">
  
  <!-- Background overlay: semi-transparent -->
  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
       onclick="closeModal('<%= modal_id %>')">
  </div>

  <!-- Modal panel -->
  <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
    <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg lg:max-w-2xl xl:max-w-4xl"
         onclick="event.stopPropagation()">
      
      <!-- Modal header -->
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h3 class="text-lg font-medium leading-6 text-gray-900" id="modal-title">
              <%= modal_title || "Modal Title" %>
            </h3>
            <% if defined?(modal_subtitle) && modal_subtitle.present? %>
              <p class="mt-1 text-sm text-gray-500">
                <%= modal_subtitle %>
              </p>
            <% end %>
          </div>
          <div class="ml-3 flex h-7 items-center">
            <button type="button" 
                    class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                    onclick="closeModal('<%= modal_id %>')">
              <span class="sr-only">Close</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Modal content -->
      <div class="bg-white px-4 pb-4 sm:p-6 sm:pb-4">
        <div class="w-full">
          <div class="mt-2">
            <% if defined?(content) && content.present? %>
              <%= content.html_safe %>
            <% else %>
              <%= yield %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <% if defined?(modal_actions) && modal_actions.present? %>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <% modal_actions.each do |action| %>
            <% if action[:type] == 'primary' %>
              <button type="button" 
                      class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto"
                      onclick="closeModal('<%= modal_id %>')">
                <%= action[:text] %>
              </button>
            <% elsif action[:type] == 'secondary' %>
              <button type="button" 
                      class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
                      onclick="closeModal('<%= modal_id %>')">
                <%= action[:text] %>
              </button>
            <% elsif action[:type] == 'danger' %>
              <button type="button" 
                      class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto"
                      onclick="closeModal('<%= modal_id %>')">
                <%= action[:text] %>
              </button>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
