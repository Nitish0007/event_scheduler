<% if current_user.organizer? %>
  <% actions = {
    new: {
      title: "New Event",
      path: "/users/#{current_user.id}/events/new"
    },
    show: {
      path: "/users/#{current_user.id}/events/:id"
    }
  } %>
<% else %>
  <% actions = {
    show: {
      path: "/users/#{current_user.id}/events/:id"
    }
  } %>
<% end %>

<%= render partial: "shared/index_page", 
  locals: { 
    data: @events, 
    klass: Event, 
    columns: {
      event_title: "Event Title",
      event_date: "Event Date",
      event_venue: "Event Venue",
      tickets_count: "Total Tickets",
      created_at: "Created At",
      updated_at: "Updated At"
    },
    actions: actions
  }
%>