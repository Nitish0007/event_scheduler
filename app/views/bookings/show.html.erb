<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-blue-600 px-8 py-8">
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Booking Details</h1>
          <p class="text-blue-100 text-xl">Booking ID: #<%= @booking.id %></p>
        </div>
        <div class="text-right">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium
            <%= case @booking.status
                when 'confirmed' then 'bg-green-100 text-green-800'
                when 'pending', 'payment_pending' then 'bg-yellow-100 text-yellow-800'
                when 'cancelled', 'failed', 'payment_failed' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= @booking.status.humanize %>
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Event & Ticket Info -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Event Information -->
        <div class="bg-white rounded-xl shadow-sm border p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Event Information</h2>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-gray-600 text-lg">Event Name:</span>
              <span class="font-semibold text-lg text-gray-800"><%= @booking.event_title %></span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-gray-600 text-lg">Event Date:</span>
              <span class="font-semibold text-lg text-gray-800"><%= @booking.ticket.event.event_date&.strftime("%B %d, %Y") %></span>
            </div>
            <div class="flex justify-between items-center py-3">
              <span class="text-gray-600 text-lg">Venue:</span>
              <span class="font-semibold text-lg text-gray-800"><%= @booking.ticket.event.event_venue %></span>
            </div>
          </div>
        </div>
        
        <!-- Ticket Information -->
        <div class="bg-white rounded-xl shadow-sm border p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Ticket Information</h2>
          </div>
          <div class="space-y-4">
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-gray-600 text-lg">Ticket Type:</span>
              <span class="font-semibold text-lg text-gray-800"><%= @booking.ticket.ticket_type %></span>
            </div>
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <span class="text-gray-600 text-lg">Quantity:</span>
              <span class="font-semibold text-lg text-gray-800"><%= @booking.quantity %></span>
            </div>
            <div class="flex justify-between items-center py-3">
              <span class="text-gray-600 text-lg">Price per ticket:</span>
              <span class="font-semibold text-lg text-gray-800">₹<%= '%.2f' % @booking.ticket.price_per_ticket %></span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Column - Payment Info & Actions -->
      <div class="lg:col-span-1">
        <!-- Payment Information -->
        <div class="bg-white rounded-xl shadow-sm border p-8 mb-8">
          <div class="flex items-center mb-3">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800">Payment Details</h2>
          </div>
          
          <div class="text-center mb-6">
            <div class="text-4xl font-bold text-blue-600 mb-2">₹<%= '%.2f' % @booking.total_amount %></div>
            <div class="text-gray-600 text-lg">Total Amount</div>
          </div>
          
          <div class="space-y-4">
            <% if @booking.payment.present? %>
              <div class="flex justify-between items-center py-3 border-b border-gray-100">
                <span class="text-gray-600">Payment Status:</span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                  <%= case @booking.payment.status
                      when 'completed' then 'bg-green-100 text-green-800'
                      when 'processing' then 'bg-blue-100 text-blue-800'
                      when 'failed' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= @booking.payment.status.humanize %>
                </span>
              </div>
              
              <% if @booking.payment.reference_number.present? %>
                <div class="flex justify-between items-center py-3 border-b border-gray-100">
                  <span class="text-gray-600">Reference:</span>
                  <span class="font-medium text-gray-800"><%= @booking.payment.reference_number %></span>
                </div>
              <% end %>
              
              <% if @booking.payment.fee&.positive? %>
                <div class="flex justify-between items-center py-3">
                  <span class="text-gray-600">Processing Fee:</span>
                  <span class="font-medium text-gray-800">₹<%= '%.2f' % @booking.payment.fee %></span>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-6 bg-gray-50 rounded-lg">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="text-gray-500">No payment information available</p>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="bg-white rounded-xl shadow-sm border p-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-6">Actions</h3>
          <div class="space-y-4">
            <% if @booking.payment_required? %>
              <%= link_to "Complete Payment", "/users/#{current_user.id}/bookings/#{@booking.id}/payments/new", 
                  class: "w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors text-base font-medium flex items-center justify-center" %>
            <% end %>
            
            <% if @booking.can_cancel? %>
              <%= link_to "Cancel Booking", "/users/#{current_user.id}/bookings/#{@booking.id}", 
                  method: :delete, 
                  data: { confirm: "Are you sure you want to cancel this booking?" },
                  class: "w-full bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 transition-colors text-base font-medium flex items-center justify-center" %>
            <% end %>
            
            <%= link_to "Back to Dashboard", dashboard_path, 
                class: "w-full bg-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-400 transition-colors text-base font-medium flex items-center justify-center" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
