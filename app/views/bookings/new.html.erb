
<%= render "shared/form", 
  form_resource: @booking,
  form_submission_path: "/users/#{current_user.id}/tickets/#{@ticket.id}/bookings",
  submit_button_title: "Book Ticket",
  form_method: :post,
  form_title: "New Booking",
  form_fields: [
    { type: "hidden", name: "user_id", value: current_user.id },
    { type: "hidden", name: "ticket_type", value: @ticket.ticket_type },
    { type: "hidden", name: "event_id", value: @ticket.event_id },
    { type: "hidden", name: "ticket_id", value: @ticket.id },
    { type: "number", label: "Quantity", name: "quantity", options: { min: 1, max: @ticket.available_count } }
  ],
  actions: {
    back: {
      title: "Back",
      path: "/users/#{current_user.id}/tickets/#{@ticket.id}"
    }
  }
%>